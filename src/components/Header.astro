---
import Layout from '../layouts/Layout.astro';
---

<nav class="header-nav">
  <a href="/" class="header-logo-link">
    <img src="/Logo_clinicalfisio.png" alt="Fisioterapia" class="header-logo" />
    <h1 class="header-title">
      <span class="header-title-clinical">CLINICAL</span>
      <span class="header-title-fisio">FISIO</span>
    </h1>
  </a>
  <button 
    class="mobile-menu-button"
    aria-label="MenÃº"
    aria-expanded="false"
    aria-controls="navLinks"
    id="menuButton"
  >
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M3 12H21M3 6H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    </svg>
  </button>
  <div class="header-links" id="navLinks">
    <a href="/" class="nav-link">Inicio</a>
    <a href="/servicios" class="nav-link">Servicios</a>
    <a href="/sobre-nosotros" class="nav-link">Sobre Nosotros</a>
    <a href="/contacto" class="nav-link">Contacto</a>
  </div>
</nav>

<style>
  /* Base styles using Tailwind */
  .header-nav {
    @apply flex justify-between items-center mb-8 px-4 py-2 relative bg-white;
    z-index: 1000;
  }

  .header-logo-link {
    @apply flex items-center space-x-4;
  }

  .header-logo {
    @apply h-12 w-auto;
  }

  .header-title {
    @apply text-2xl font-bold flex flex-col;
  }

  .header-title-clinical {
    @apply text-black;
  }

  .header-title-fisio {
    color: rgb(var(--primary_color));
    @apply font-bold;
  }

  .header-links {
    @apply flex space-x-6;
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  }

  .nav-link {
    color: rgb(var(--secondary_color));
    @apply font-bold transition-opacity duration-200;
  }

  .nav-link:hover {
    @apply opacity-80;
  }

  /* Mobile menu button - hidden by default */
  .mobile-menu-button {
    @apply hidden p-2 cursor-pointer border-0 bg-transparent;
    z-index: 1001;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .header-nav {
      @apply mb-4;
    }

    .header-logo {
      @apply h-10;
    }

    .header-title {
      @apply text-xl;
    }

    .mobile-menu-button {
      @apply block;
    }

    .header-links {
      @apply absolute top-full left-0 right-0 flex-col space-x-0 
             bg-white shadow-md;
      transform: translateY(-20px);
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
      padding: 0.5rem 0;
    }

    .header-links.active {
      @apply flex;
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    .nav-link {
      @apply block w-full py-3 px-4 text-base border-b border-gray-100;
    }

    .nav-link:last-child {
      @apply border-b-0;
    }
  }

  /* Small mobile styles */
  @media (max-width: 360px) {
    .header-title {
      @apply text-lg;
    }
    
    .header-logo {
      @apply h-8;
    }
  }
</style>

<script>
  // Client-side JavaScript
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menuButton');
    const navLinks = document.getElementById('navLinks');

    if (menuButton && navLinks) {
      menuButton.addEventListener('click', () => {
        const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
        menuButton.setAttribute('aria-expanded', String(!isExpanded));
        navLinks.classList.toggle('active');
      });

      // Close menu when clicking outside
      document.addEventListener('click', (event) => {
        if (!menuButton.contains(event.target) && 
            !navLinks.contains(event.target) && 
            navLinks.classList.contains('active')) {
          navLinks.classList.remove('active');
          menuButton.setAttribute('aria-expanded', 'false');
        }
      });
    }
  });
</script>