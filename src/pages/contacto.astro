---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---


<Layout title="Contacto - Fisioterapia">
  <div class="min-h-screen bg-white relative overflow-hidden">
    <div class="rotating-background"></div>
    <div class="container mx-auto px-4 py-12 relative z-10">
      <Header />

      <main>
        <div class="max-w-2xl mx-auto">
          <h1 class="title">Contacto</h1>

          <div class="form-card">
            <form class="space-y-6">
              <div>
                <label for="name" class="label">Nombre completo</label>
                <input type="text" id="name" name="name" class="input" required />
              </div>

              <div>
                <label for="email" class="label">Email</label>
                <input type="email" id="email" name="email" class="input" required />
              </div>

              <div>
                <label for="phone" class="label">Teléfono</label>
                <input type="tel" id="phone" name="phone" class="input" />
              </div>

              <div>
                <label for="message" class="label">Mensaje</label>
                <textarea id="message" name="message" rows="4" class="input" required></textarea>
              </div>

              <button type="submit" class="cta-button">Enviar mensaje</button>
            </form>
          </div>

          <div class="form-card">
            <h2 class="subtitle">Información de contacto</h2>
            <div class="space-y-4 text-gray-600">
              <p><strong class="text-primary">Dirección:</strong><br />C. San Isidro, 29<br />31513 Arguedas, Navarra</p>
              <p><strong class="text-primary">Teléfono:</strong><br />+34 669 99 56 15</p>
              <p><strong class="text-primary">Email:</strong><br />info@fisioterapia.com</p>
              <p><strong class="text-primary">Horario:</strong><br />Lunes a Viernes: 9:00 - 20:00<br />Sábados: 9:00 - 14:00</p>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>
<Footer />

<style>
.title {
  @apply text-4xl font-light mb-12 text-center;
  color: rgb(var(--secondary_color));
}

.form-card {
  @apply bg-white p-8 rounded-lg shadow-sm border mb-8;
  border-color: rgb(var(--secondary_color), 0.2);
}

.subtitle, .text-primary {
  color: rgb(var(--secondary_color));
  @apply text-2xl mb-4;
}

.label {
  @apply block text-sm font-medium text-gray-700 mb-1;
}

.input {
  @apply w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent;
  box-shadow: 0 0 0 2px rgba(var(--secondary_color), 0.2);
}

.cta-button {
  @apply w-full text-white px-8 py-3 rounded-lg hover:transition-colors;
  background-color: rgb(var(--secondary_color));
  &:hover {
    background-color: rgba(var(--secondary_color), 0.9);
  }
}

.rotating-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('/fisio-background.jpg');
  background-size: cover;
  background-position: center;
  opacity: 0.1;
  animation: rotate 60s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
</style>
