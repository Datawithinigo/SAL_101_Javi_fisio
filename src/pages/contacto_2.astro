---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contacto - Fisioterapia">
  <div class="min-h-screen bg-white relative overflow-hidden">
    <div class="rotating-background"></div>
    <div class="container mx-auto px-4 py-12 relative z-10">
      <Header />

      <main>
        <div class="max-w-2xl mx-auto">
          <h1 class="text-4xl font-light text-green-800 mb-12 text-center">
            Contacto
          </h1>

          <div class="bg-white p-8 rounded-lg shadow-sm border border-green-100 mb-8">
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                  Nombre completo
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  required
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                  Teléfono
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                  Mensaje
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-green-700 text-white px-8 py-3 rounded-lg hover:bg-green-800 transition-colors"
              >
                Enviar mensaje
              </button>
            </form>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-sm border border-green-100">
            <h2 class="text-2xl text-green-800 mb-4">Información de contacto</h2>
            <div class="space-y-4 text-gray-600">
              <p>
                <strong class="text-green-800">Dirección:</strong><br />
                C. San Isidro, 29<br />
                31513 Arguedas, Navarra 
              </p>
              <p>
                <strong class="text-green-800">Teléfono:</strong><br />
                +34 669 99 56 15
              </p>
              <p>
                <strong class="text-green-800">Email:</strong><br />
                info@fisioterapia.com
              </p>
              <p>
                <strong class="text-green-800">Horario:</strong><br />
                Lunes a Viernes: 9:00 - 20:00<br />
                Sábados: 9:00 - 14:00
              </p>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

<style>
  .rotating-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/fisio-background.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.1;
    animation: rotate 60s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>